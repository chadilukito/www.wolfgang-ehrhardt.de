{---------------------------------------------------------------------------}
function HexByte(b: byte): BString;
  {-byte as hex string}
const
  nib: array[0..15] of char8 = '0123456789abcdef';
begin
  HexByte := nib[b div 16] + nib[b and 15];
end;


